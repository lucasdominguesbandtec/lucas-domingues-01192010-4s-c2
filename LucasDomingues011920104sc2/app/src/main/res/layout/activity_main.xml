<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/id_cao"
        android:id="@+id/et_id"
        android:textSize="15sp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/id_cao2"
        android:id="@+id/et_id2"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/et_id"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_id2"
        android:text="Comprar Cachorro"
        android:id="@+id/bt_comprar"
        android:onClick="comprar"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/bt_comprar"
        android:layout_marginTop="20dp"
        android:id="@+id/iv_foto"
        android:src="@drawable/cao_feliz_1"
        />

    <ImageView
        android:layout_width="610dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/bt_comprar"
        android:layout_marginTop="20dp"
        android:id="@+id/iv_foto2"
        android:src="@drawable/cao_feliz_2"
        />


</androidx.constraintlayout.widget.ConstraintLayout>